{
    "name": "michael-rubel/laravel-formatters",
    "description": "This package is a collection of formatters you can use to standardize data formats in your Laravel application.",
    "keywords": [
        "michael-rubel",
        "laravel",
        "laravel-formatters"
    ],
    "homepage": "https://github.com/michael-rubel/laravel-formatters",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Rubel",
            "email": "contact@observer.name",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0",
        "spatie/laravel-package-tools": "^1.4.3"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "friendsofphp/php-cs-fixer": "^3.2",
        "nunomaduro/collision": "^5.3",
        "nunomaduro/larastan": "^0.7.15",
        "orchestra/testbench": "^6.15",
        "permafrost-dev/coverage-check": "^1.2",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "3.*",
        "vimeo/psalm": "^4.11"
    },
    "autoload": {
        "psr-4": {
            "MichaelRubel\\Formatters\\": "src"
        },
        "files": [
            "src/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MichaelRubel\\Formatters\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/testbench package:test --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MichaelRubel\\Formatters\\FormatterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
